@model Opticar.Models.ViewModels.MaterialViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    
        <div class="col-lg-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Material</h3>
                </div>
                <div class="panel-body">
                    <div class="col-lg-2">@Html.DisplayNameFor(m => m.MaterialId)</div>
                    <div class="col-lg-10">@Html.DisplayFor(m => m.SelectedText)</div>

                    <div class="col-lg-2">@Html.DisplayNameFor(m => m.Value)</div>
                    <div class="col-lg-10">@Html.DisplayFor(m => m.Value)</div>
                </div>
            </div>
        </div>
    

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Global.Delete" class="btn btn-default" /> |
            @Html.ActionLink(Resources.Global.BackToList, "Index")
        </div>
    }
</div>
