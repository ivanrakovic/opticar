@using Resources
@model Opticar.Models.ViewModels.MaterialViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-lg-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Material</h3>
            </div>
            <div class="panel-body">
                <div>
                    <table class="table table-striped table-hover ">
                        <tbody>
                        <tr>
                            <td><b>@Html.DisplayNameFor(m => m.MaterialId):</b></td>
                            <td>@Html.DisplayFor(m => m.SelectedText)</td>
                        </tr>
                        <tr>
                            <td><b>@Html.DisplayNameFor(m => m.Value):</b></td>
                            <td>@Html.DisplayFor(m => m.Value)</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Global.Delete" class="btn btn-default" /> |
            @Html.ActionLink(Resources.Global.BackToList, "Index")
        </div>
    }
</div>
