@model Opticar.Models.ViewModels.MaterialViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Detalji</h2>

<div class="row">
    <div class="col-lg-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Material</h3>
            </div>
            <div class="panel-body">
                <div>
                    <table class="table table-striped table-hover ">
                        <tbody>
                            <tr>
                                <td><b>@Html.DisplayNameFor(m => m.MaterialId):</b></td>
                                <td>@Html.DisplayFor(m => m.SelectedText)</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(m => m.Value):</b></td>
                                <td>@Html.DisplayFor(m => m.Value)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink(Resources.Global.Edit, "Edit", new { id = Model.MaterialId }) |
    @Html.ActionLink(Resources.Global.BackToList, "Index")
</div>
