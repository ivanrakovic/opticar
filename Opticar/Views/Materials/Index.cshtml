@model IEnumerable<Opticar.Models.ViewModels.MaterialViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Pregled materijala</h2>

<p>
    @Html.ActionLink(Resources.Global.CreateNew, "Create")
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaterialId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SelectedText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.ActionLink(Resources.Global.Edit, "Edit", new {id = item.MaterialId}) |
                    @Html.ActionLink(Resources.Global.Details, "Details", new {id = item.MaterialId}) |
                    @Html.ActionLink(Resources.Global.Delete, "Delete", new {id = item.MaterialId})
                </td>
            </tr>
        }

</table>


