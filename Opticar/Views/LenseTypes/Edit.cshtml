@using Resources
@model Opticar.Models.Optics.LenseType

@{
    ViewBag.Title = "Edit";
    Html.EnableClientValidation(false);
}

<h2>@Global.Edit</h2>


@using (Html.BeginForm("Edit", "LenseTypes", FormMethod.Post, new { name = "LenseTypes", @class = "js-valid" }))
{
    @Html.AntiForgeryToken()
    
    <div class="card">
        <h4 class="card-header">Lense Type</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LenseTypeId)

        <div class="form-group">
            @Html.LabelFor(model => model.DisplayName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Global.Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Global.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/optics")
}
