@model Opticar.Models.ViewModels.LayersViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Dodavanje novih slojeva</h2>
<p>
    Dodavanje slojeva
</p>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <h3 class="card-header">Slojevi</h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Manufacturers, "ManufacturerId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.ManufacturerId, Model.Manufacturers, Resources.Global.SelectOne, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ManufacturerId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <p>
                    <button type="submit" class="btn btn-primary">@Resources.Global.Commit</button>
                </p>
            </div>
        </div>
    </div>


}

<div>
    @Html.ActionLink(Resources.Global.BackToList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
