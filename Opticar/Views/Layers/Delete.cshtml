@using Resources
@model Opticar.Models.ViewModels.LayersViewModel

@{
    ViewBag.Title = @Global.DeleteInfo;
}

<h2>@Global.DeleteInfo</h2>


<div class="alert alert-dismissible alert-warning col-lg-4">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4 class="text-danger">@Global.Warning!</h4>
    <p>@Global.DeleteWarning?</p>
    <p> @Html.ActionLink(Global.BackToList, "Index", new { }, new { @class = "alert-link" })</p>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card">
            <h3 class="card-header">Sloj</h3>
            
            <div class="card-block">
                <div>
                    <table class="table table-striped table-hover">
                        <tbody>
                        <tr>
                            <td><h6>@Html.DisplayNameFor(m => m.ManufacturerId):</h6></td>
                            <td>@Html.DisplayFor(m => m.SelectedText)</td>
                        </tr>
                        <tr>
                            <td><h6>@Html.DisplayNameFor(m => m.Name):</h6></td>
                            <td>@Html.DisplayFor(m => m.Name)</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-muted text-center">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="@Global.Delete" class="btn btn-danger" />
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

@Html.ActionLink(Resources.Global.BackToList, "Index")
